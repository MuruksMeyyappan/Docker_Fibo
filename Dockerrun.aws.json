{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions":[
        {
            "name": "client",
            "image": "muruks96/multi-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "muruks96/multi-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "muruks96/multi-worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "muruks96/multi-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMapping": [{
                "hostPort": 80,
                "containerPort": 80
            }],
            "links": ["client","server"]
        }
    ]
}